<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
<p>
  <strong>Tweet:</strong>
  <%= @tweet.user.name %>
</p>

<p>

<strong>Content:</strong>
  <%= @tweet.content %>
</p>

<p>
<strong>Likes:</strong>
  <%= @tweet.likes.each do |u| %>
  <div>
    <td><%= image_tag(@tweet.user.profile_url, size: "100x100", class: "mr-3 figure-img img-fluid rounded-circle") %></td>
  </div>
  <% end %>
</p>

<button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_tweet_path(@tweet) %> </button>


 <div class="container my-4"><%= link_to 'Back to Tweets', root_path %></div>
<% end %>